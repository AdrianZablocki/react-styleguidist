{
  "name": "react-styleguidist",
  "description": "React components style guide generator",
  "private": true,
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me/"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "cheerio": "^1.0.0-rc.2",
    "css-loader": "^2.1.1",
    "deabsdeep": "^1.0.6",
    "deepfreeze": "^2.0.0",
    "dog-names": "^1.0.2",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.15.3",
    "eslint-config-tamia": "^6.0.2",
    "eslint-plugin-compat": "^2.7.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "flow-bin": "^0.95.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-serializer-html": "^6.0.0",
    "keymirror": "^0.1.1",
    "lerna": "^3.15.0",
    "lint-staged": "^8.1.5",
    "lodash": "^4.17.11",
    "memfs": "^2.15.2",
    "prettier": "1.16.4",
    "prop-types": "^15.7.2",
    "raf": "^3.4.1",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-test-renderer": "^16.8.5",
    "strip-shebang": "^1.0.2",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run test:jest",
    "posttest": "npm run format",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node packages/react-styleguidist/lib/bin/styleguidist.js server --config examples/basic/styleguide.config.js",
    "start:customised": "node packages/react-styleguidist/lib/bin/styleguidist.js server --config examples/customised/styleguide.config.js",
    "start:sections": "node packages/react-styleguidist/lib/bin/styleguidist.js server --config examples/sections/styleguide.config.js",
    "start:ui": "node packages/react-styleguidist/lib/bin/styleguidist.js server",
    "lint": "eslint . --cache --fix",
    "flow": "flow",
    "compile": "lerna run compile",
    "compile:watch": "lerna run compile:watch --parallel",
    "prepublishOnly": "npm run compile",
    "build:basic": "node packages/react-styleguidist/lib/bin/styleguidist.js build --config examples/basic/styleguide.config.js",
    "build:customised": "node packages/react-styleguidist/lib/bin/styleguidist.js build --config examples/customised/styleguide.config.js",
    "build:sections": "node packages/react-styleguidist/lib/bin/styleguidist.js build --config examples/sections/styleguide.config.js",
    "test:browser:pre": "yarn add -W puppeteer",
    "test:browser:basic": "node test/browser.js examples/basic/styleguide/index.html",
    "test:browser:customised": "node test/browser.js examples/customised/styleguide/index.html",
    "test:browser:sections": "node test/browser.js examples/sections/styleguide/index.html",
    "format": "prettier --write '**/*.{js,md,css}'",
    "test:cypress:pre": "yarn add -W cypress@3.0.2 wait-on",
    "test:cypress:open": "cypress open",
    "test:cypress:run": "cypress run",
    "test:cypress:startServer": "node test/run.server.js",
    "test:cypress:startServer:post": "wait-on http://localhost:8082",
    "lerna": "lerna"
  },
  "jest": {
    "testURL": "http://localhost/",
    "setupFiles": [
      "./test/raf-polyfill.js",
      "./test/jestsetup.js"
    ],
    "modulePaths": [
      "./packages/react-styleguidist/src/client"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/packages/react-styleguidist/lib/",
      "<rootDir>/examples/",
      "<rootDir>/test/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/packages/react-styleguidist/src/scripts/server.js",
      "<rootDir>/packages/react-styleguidist/src/scripts/build.js"
    ],
    "snapshotSerializers": [
      "deabsdeep/serializer",
      "enzyme-to-json/serializer",
      "jest-serializer-html"
    ]
  },
  "keywords": [
    "react",
    "jsx",
    "styleguide",
    "style guide",
    "documentation",
    "docs",
    "generator",
    "component",
    "components"
  ],
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 1 Safari version",
    "IE >= 11"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
